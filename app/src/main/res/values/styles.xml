<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background_color">#E8E8E8</item>
        <item name="text_color">#000000</item>
        <item name="card_background_color">#FFFFFF</item>
        <item name="card_text_color">#000000</item>
        <item name="button_base_color">@color/colorAccent</item>
        <item name="button_text_color">#FFFFFF</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background_color">#303030</item>
        <item name="text_color">#FFFFFF</item>
        <item name="card_background_color">#424242</item>
        <item name="card_text_color">#FFFFFF</item>
        <item name="button_base_color">@color/colorAccent</item>
        <item name="button_text_color">#FFFFFF</item>
    </style>

    <style name="ButtonBase" parent="android:Widget.Button">
        <item name="android:textColor">?attr/button_text_color</item>
        <item name="android:background">@drawable/button_base_shape</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CardViewBase" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">?attr/card_background_color</item>
    </style>

    <style name="CardViewTitle" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="CardViewText" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

</resources>
