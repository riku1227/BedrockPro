<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mc_button_color</item>
    </style>

    <style name="MCButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/mc_button_text_color</item>
        <item name="android:background">@drawable/mc_button_shape</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardViewTitle" parent="android:Widget.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CardViewText" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

</resources>
