<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/resource_pack_gen_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/resource_pack_gen_name"
                        android:textSize="25sp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/resource_pack_gen_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/resource_pack_gen_description"
                        android:textSize="25sp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/resource_pack_gen_header_uuid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/resource_pack_gen_header_uuid"
                        android:textSize="25sp"
                        android:visibility="gone"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/resource_pack_gen_module_uuid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/resource_pack_gen_module_uuid"
                        android:textSize="25sp"
                        android:visibility="gone"/>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/resource_pack_gen_resource_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_resource_cache"
                    android:textSize="15sp"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/resource_pack_gen_auto_gen_uuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_auto_gen_uuid"
                    android:textSize="15sp"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/resource_pack_gen_custom_pack_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_custom_pack_icon"
                    android:textSize="15sp"
                    android:checked="false"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/resource_pack_gen_generate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_generate"
                    android:textSize="25sp"
                    style="@style/MCButton"/>

                <Button
                    android:id="@+id/resource_pack_gen_pick_custom_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_pick_custom_icon"
                    android:textSize="25sp"
                    style="@style/MCButton"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/aaaaaaaaaaaaaaa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_delete_cache"
                    android:textSize="25sp"
                    style="@style/MCButton"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/resource_pack_gen_custom_pack_icon_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resource_pack_gen_icon"
                    style="@style/CardViewText"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <requestFocus />

                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>